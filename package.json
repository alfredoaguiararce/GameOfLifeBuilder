    "type": "git",
    "url": "git+https://github.com/alfredoaguiararce/GameOfLifeBuilder.git"
  },
  "keywords": [
    "conways",
    "game",
    "of",
    "life",
    "builders",
    "automata"
  ],
  "author": "Alfredo Aguiar Arce <alfredoaguiararce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alfredoaguiararce/GameOfLifeBuilder/issues"
  },
  "homepage": "https://github.com/alfredoaguiararce/GameOfLifeBuilder#readme",
  "dependencies": {
    "@types/es6-promise": "^3.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "jest": {
